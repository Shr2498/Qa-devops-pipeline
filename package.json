{
  "name": "qa-devops-pipeline",
  "version": "1.0.0",
  "description": "QA in Agile/DevOps Pipeline demonstration project",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "echo 'Install k6 separately: npm install -g k6' && echo 'Then run: k6 run tests/performance/load-test.js'",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "quality-check": "npm run lint && npm run security-check && npm run test",
    "security-check": "npm audit && snyk test",
    "build": "docker build -t qa-devops-app .",
    "sonar": "sonar-scanner",
    "pre-commit": "npm run lint && npm run test:unit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "cypress": "^13.6.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "nodemon": "^3.0.2",
    "snyk": "^1.1248.0",
    "sonar-scanner": "^3.1.0",
    "husky": "^8.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/qa-devops-pipeline.git"
  },
  "keywords": [
    "qa",
    "devops",
    "testing",
    "ci-cd",
    "agile"
  ],
  "author": "QA Team",
  "license": "MIT"
}
